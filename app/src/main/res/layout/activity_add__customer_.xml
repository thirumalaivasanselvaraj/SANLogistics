<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_tool"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addcustomer_activity_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_blue_backicon" />

        <TextView
            android:id="@+id/car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/addcustomerdetails"
            android:textColor="@color/block"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/view_one"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/view"></View>

    <ScrollView

        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_weight="1"
        android:background="@drawable/appbg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/nameofthecompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/user_icon"
                    android:drawablePadding="7dp"
                    android:hint="@string/addcustomernameofthecompany"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="15dp"

                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/addressofthecompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/address_icon"
                    android:drawablePadding="7dp"
                    android:hint="@string/addcustomeraddressofthecompany"
                    android:imeOptions="actionNext"
                    android:maxLines="3"
                    android:padding="15dp"

                    android:singleLine="true"
                    android:textColor="@color/black"

                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputcontactperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/contactpersonname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/contactperson_icon"
                    android:drawablePadding="7dp"
                    android:hint="@string/addcustomecontactpersonname"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="15dp"

                    android:singleLine="true"
                    android:textColor="@color/black"

                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="false"
                android:progressDrawable="@drawable/circle_progress_bar"
                android:visibility="gone" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputdesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/designation"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/designation_icon"
                    android:drawablePadding="7dp"
                    android:hint="@string/addcustomerdesignation"
                    android:imeOptions="actionNext"
                    android:maxLines="1"

                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"

                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mobilenumber"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/mobile_icon"
                    android:drawablePadding="7dp"
                    android:hint="@string/addcustomermobilenumber"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="15dp"

                    android:singleLine="true"
                    android:textColor="@color/black"

                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/Emailid"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/email_icon"
                    android:drawablePadding="7dp"
                    android:hint="@string/addcustomeremailid"
                    android:imeOptions="actionNext"
                    android:maxLines="1"

                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"

                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dip"
                android:paddingLeft="17dp"

                android:text="Catogory:" />

            <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
                android:id="@+id/category"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"

                app:DoneSearchTintColor="@android:color/holo_purple"
                app:RevealEmptyText="Select Category"
                app:RevealViewBackgroundColor="@android:color/secondary_text_dark"
                app:SearchViewBackgroundColor="@android:color/secondary_text_dark"

                app:ShowBorders="true" />

            <View
                android:id="@+id/view_two"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/view"></View>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dip"
                android:paddingLeft="17dp"

                android:text="CustomerType:" />

            <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
                android:id="@+id/customertype"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dropDownVerticalOffset="-15dp"
                android:gravity="center_vertical"

                app:DoneSearchTintColor="@android:color/holo_purple"
                app:RevealEmptyText="Select CustomerType"
                app:RevealViewBackgroundColor="@android:color/secondary_text_dark"
                app:SearchViewBackgroundColor="@android:color/secondary_text_dark"
                app:ShowBorders="true" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:gravity="bottom"
        android:padding="10dp">


        <TextView
            android:id="@+id/savecustomer"
            style="?android:attr/borderlessButtonStyle"

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/savebuttonpadding"

            android:text="@string/savecustomer"
            android:textColor="@color/white"
            android:textSize="@dimen/loginr_text_size"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
